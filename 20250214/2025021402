// 배열의 길이에 따라 다른 연산하기
function solution(arr, n) {
  if (arr.length % 2 === 1) {
    for (let i = 0; i < arr.length; i++) {
      if (i % 2 === 0) {
        arr[i] += n;
      }
    }
  } else {
    for (let i = 0; i < arr.length; i++) {
      if (i % 2 === 1) {
        arr[i] += n;
      }
    }
  }
  return arr;
}
